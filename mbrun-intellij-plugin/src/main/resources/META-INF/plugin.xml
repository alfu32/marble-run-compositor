<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
  <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
  <id>eu.ec.oib.training.alferio.mbrun.intellij.plugin.mbrun-intellij-plugin</id>

  <!-- Public plugin name should be written in Title Case.
       Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
  <name>Mbrun Syntax Highlight</name>

  <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
  <vendor email="alferaru.ioan@gmain.com" url="https://localhost:4000">Marblerun</vendor>
  <version>1.1</version>

  <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
       Simple HTML elements (text formatting, paragraphs, and lists) can be added inside of <![CDATA[ ]]> tag.
       Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->
  <description><![CDATA[
    syntax highlighting extension for mbrun files
  ]]></description>

  <!-- Product and plugin compatibility requirements.
       Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
  <depends>com.intellij.modules.platform</depends> -->
  <!-- This line tells IntelliJ we depend on the base language APIs. -->
  <depends>com.intellij.modules.lang</depends>
  <depends>org.intellij.intelliLang</depends>

  <extensions defaultExtensionNs="com.intellij">
    <fileType
            name="mbrun file"
            language="MBRUN"
            implementationClass="eu.ec.oib.training.alferio.mbrun.intellij.plugin.MbrunFileType"
            extensions="mbrun" />
    <lang.syntaxHighlighterFactory
            language="MBRUN"
            implementationClass="eu.ec.oib.training.alferio.mbrun.intellij.plugin.MbrunSyntaxHighlighterFactory"/>
    <!-- Register your language injection support -->
    <languageInjector
            implementation="eu.ec.oib.training.alferio.mbrun.intellij.plugin.MbrunMultiHostInjector"/>
    <lang.parserDefinition language="MBRUN"
                           implementationClass="eu.ec.oib.training.alferio.mbrun.intellij.plugin.MbrunParserDefinition"/>
    <colorSettingsPage
            implementation="eu.ec.oib.training.alferio.mbrun.intellij.plugin.MbrunColorSettingsPage"/>
    <colorSettingsPage implementation="eu.ec.oib.training.alferio.mbrun.intellij.plugin.MbrunColorSettingsPage"/>
  </extensions>
</idea-plugin>